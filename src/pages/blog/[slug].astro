---
import BlogPost from '@layouts/BlogPost.astro';
import { getCollection, render, type CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  return blogEntries.map((blogpost) => ({
    params: { slug: blogpost.id },
    props: { blogpost },
  }));
}

interface Props {
  blogpost: CollectionEntry<'blog'>;
}

const { blogpost } = Astro.props;
const { Content } = await render(blogpost);
const { title, description } = blogpost.data;
const { headings } = blogpost.rendered?.metadata; 
---

<BlogPost content={blogpost.data} {title} {description} {headings}>
  <Content />
</BlogPost>
